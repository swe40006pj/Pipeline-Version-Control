pipeline {
  agent any

  stages {

    stage('Checkout Current Branch') {
      steps {
        checkout scm
      }
    }

    stage('Fetch Tests from test Branch') {
      steps {
        script {
          sh '''
            echo "=== Fetching tests from origin/test branch ==="
            git fetch origin test

            rm -rf tmp_test_branch
            mkdir tmp_test_branch


            # å¯¼å‡º test åˆ†æ”¯ä¸­ test/ æ–‡ä»¶å¤¹å’Œé…ç½®æ–‡ä»¶
            git archive FETCH_HEAD test | tar -x -C tmp_test_branch || echo "âš ï¸ test folder not found"
            git archive FETCH_HEAD test/pytest.ini test/conftest.py test/requirements.txt | tar -x -C tmp_test_branch || echo "âš ï¸ Some config files may not exist."

            # å°†æµ‹è¯•æ–‡ä»¶å¤åˆ¶åˆ°å½“å‰å·¥ä½œåŒº
            for f in test pytest.ini conftest.py requirements.txt; do

              if [ -e tmp_test_branch/$f ]; then
                echo "âœ… Updating $f from test branch"
                rm -rf $f
                mv tmp_test_branch/$f ./
              else
                echo "âš ï¸ $f not found in test branch"
              fi
            done

            ls -R test || echo "âš ï¸ test directory missing after fetch"
          '''
        }
      }
    }

    stage('Compare Categories and Run Tests (in Docker)') {
      agent {
        docker {
          image 'python:3.11-slim'

          args '-u root'

        }
      }

      steps {
        script {
          sh '''
            set -e
            echo "ğŸ Using Python environment in Docker container"
            python3 --version


            # å®‰è£… gitï¼ˆpython:3.11-slim é»˜è®¤ä¸å¸¦ï¼‰
            apt-get update && apt-get install -y git
            git config --global --add safe.directory ${WORKSPACE}


            echo "=== Installing test dependencies ==="

            if [ -f requirements.txt ]; then
              pip install --upgrade pip
              pip install -r requirements.txt
            else
              pip install pytest
            fi

            echo "=== Comparing categories between develop and current branch ==="
            git fetch origin develop
            git show origin/develop:app/app.py > old_app.py
            cp app/app.py new_app.py

            # æå– categories
            mv app/app.py current_app.py.bak # å¤‡ä»½å½“å‰æ–‡ä»¶
            mv old_app.py app/app.py         # å°†æ—§æ–‡ä»¶æ”¾åˆ°æ­£ç¡®ä½ç½®
            old_cats=$(python3 extract_cats.py | sort)
            mv app/app.py old_app.py         # æ¢å¤æ—§æ–‡ä»¶å
            mv current_app.py.bak app/app.py # æ¢å¤å½“å‰æ–‡ä»¶

            # 3. æå–æ–°çš„åˆ†ç±»
            new_cats=$(python3 extract_cats.py | sort)

            echo "Old categories: $old_cats"
            echo "New categories: $new_cats"

            added_cats=""
            for c in $new_cats; do
              if ! echo "$old_cats" | grep -qw "$c"; then
                added_cats="$added_cats $c"
              fi
            done

            if [ -z "$added_cats" ]; then
              echo "âœ… No new categories found. Skipping selective test run."
              exit 0
            fi

            echo "ğŸ§© New categories detected: $added_cats"

            missing_tests=0
            failed_tests=0
            for cat in $added_cats; do
              echo "â–¶ Running tests for category: $cat"
              pytest test -k "$cat" || {
                status=$?
                if [ $status -eq 5 ]; then
                  echo "âŒ No test found for category '$cat'"
                  missing_tests=1
                else
                  echo "âŒ Some tests failed for category '$cat'"
                  failed_tests=1
                fi
              }
            done

            if [ $missing_tests -eq 1 ]; then
              echo "âŒ Missing tests for one or more categories."
              exit 1
            fi

            if [ $failed_tests -eq 1 ]; then
              echo "âŒ One or more tests failed."
              exit 1
            fi

            echo "âœ… All new categories have tests and all passed!"
          '''
        }
      }
    }
  }

  post {
    success {
      echo 'PIPELINE âœ… All category tests passed.'
    }
    failure {
      echo 'PIPELINE âŒ Some tests failed or missing.'
    }
  }
}

